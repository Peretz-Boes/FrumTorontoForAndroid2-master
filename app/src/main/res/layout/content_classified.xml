<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/content_classified"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_background_colour"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.boes.peretz.frumtoronto.ClassifiedActivity"
    tools:showIn="@layout/activity_classified">

    <Button
        android:id="@+id/button34"
        android:text="@string/classified_button_text"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:onClick="showClassified"/>

    <Button
        android:id="@+id/button35"
        android:text="@string/weekly_specials_button_text"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button34"
        android:layout_alignLeft="@+id/button34"
        android:layout_alignStart="@+id/button34"
        android:layout_marginTop="22dp"
        android:onClick="showWeeklySpecials"/>
</RelativeLayout>
