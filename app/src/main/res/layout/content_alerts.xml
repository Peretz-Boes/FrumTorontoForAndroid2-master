<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/content_alerts"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_background_colour"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.boes.peretz.frumtoronto.AlertsActivity"
    tools:showIn="@layout/activity_alerts">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Button
        android:id="@+id/button30"
        android:text="@string/bulletins_and_alerts_button_text"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="18dp"
        android:onClick="showBulletinsAndAlerts"/>

    <Button
        android:id="@+id/button31"
        android:text="@string/kosher_alerts_button_text"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button30"
        android:layout_alignLeft="@+id/button30"
        android:layout_alignStart="@+id/button30"
        android:layout_marginTop="21dp"
        android:onClick="showKosherAlerts"/>

    <Button
        android:id="@+id/button32"
        android:text="@string/shiva_notifications_button_text"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button31"
        android:layout_alignRight="@+id/button31"
        android:layout_alignEnd="@+id/button31"
        android:layout_marginTop="18dp"
        android:onClick="showShivaNotifications"/>
    </RelativeLayout>
</ScrollView>
